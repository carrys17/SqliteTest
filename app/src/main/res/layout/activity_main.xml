<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shang.sqlitetest.MainActivity">

    <Button
        android:id="@+id/id_add"
        android:onClick="add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建数据库并添加数据"
     />

    <Button
        android:onClick="onClick"
        android:id="@+id/quert_sql"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通过sql语句查询"
        />

    <Button
        android:onClick="onClick"
        android:id="@+id/quert_api"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通过api查询"
        />

    <Button
        android:onClick="select"
        android:text="通过分页显示数据库数据"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/id_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
